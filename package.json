{
  "type": "module",
  "name": "template-api",
  "description": "The template repository for USThing backend services, powered by Fastify.",
  "version": "0.2.5",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "yarn build && tsc -p test/tsconfig.json && FASTIFY_AUTOLOAD_TYPESCRIPT=1 tsx --test --experimental-test-coverage test/**/*.ts",
    "build": "tsc",
    "watch": "tsc -w",
    "start": "fastify start -l info dist/src/app.js --options",
    "dev": "yarn run build && concurrently -k -p '[{name}]' -n TypeScript,App -c yellow.bold,cyan.bold yarn:watch yarn:dev:start",
    "dev:start": "fastify start --ignore-watch='.ts$' -w -l info -P dist/src/app.js --options",
    "lint": "eslint",
    "lint:fix": "eslint --fix"
  },
  "keywords": [],
  "author": "Flandia",
  "license": "MIT",
  "dependencies": {
    "@fastify/autoload": "^6.0.3",
    "@fastify/cors": "^10.0.2",
    "@fastify/mongodb": "^9.0.2",
    "@fastify/sensible": "^6.0.2",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.1",
    "@fastify/type-provider-typebox": "^5.1.0",
    "@scalar/fastify-api-reference": "^1.25.113",
    "@sinclair/typebox": "^0.34.15",
    "fastify": "^5.2.1",
    "fastify-cli": "^7.3.0",
    "fastify-plugin": "^5.0.1",
    "openid-client": "^6.1.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^22.12.0",
    "c8": "^10.1.3",
    "concurrently": "^9.1.2",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "fastify-tsconfig": "^3.0.0",
    "globals": "^15.14.0",
    "prettier": "3.4.2",
    "prettier-plugin-jsdoc": "^1.3.2",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0"
  },
  "packageManager": "yarn@4.4.0"
}
